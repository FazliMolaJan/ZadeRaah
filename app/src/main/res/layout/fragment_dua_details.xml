<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shapef"
    android:orientation="vertical"
    tools:context=".Details">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/close"
            android:layout_width="45dp"
            android:tint="@android:color/holo_red_dark"
            android:src="@drawable/closeicon"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/tittle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Tittle"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/play"
            android:layout_width="45dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/btn_play"
            android:layout_height="45dp" />
        <ImageView
            android:id="@+id/questionmark"
            android:layout_width="45dp"
            android:tint="@android:color/white"
            android:src="@drawable/questionmark"
            android:layout_height="45dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.1"
                    android:background="@android:color/white"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:alpha="0.9"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:minHeight="150dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_shape">

                        <com.android.zaderaah.Session.ZoomTextView
                            android:id="@+id/ArabicDua"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Some Testing"
                            android:textColor="@android:color/white"
                            android:textSize="22dp" />
                    </ScrollView>




                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:minHeight="150dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/round_shape">

                        <com.android.zaderaah.Session.ZoomTextView
                            android:id="@+id/TranslationU"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Some Testing"
                            android:textColor="@android:color/white"
                            android:textSize="22dp" />
                    </ScrollView>


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:minHeight="150dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/round_shape">

                        <com.android.zaderaah.Session.ZoomTextView
                            android:id="@+id/TranslationE"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Some Testing"
                            android:textColor="@android:color/white"
                            android:textSize="22dp" />
                    </ScrollView>


                    <include android:visibility="gone" layout="@layout/custom_audio" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>